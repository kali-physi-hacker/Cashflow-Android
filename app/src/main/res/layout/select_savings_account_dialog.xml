<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/colorDarkGray"
        android:textStyle="bold"
        android:layout_marginTop="16sp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/select_savings_account_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@android:color/holo_red_light"
        android:padding="10sp"
        android:layout_marginTop="8sp"
        android:textSize="12sp"
        android:layout_margin="10sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/select_savings_account_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:paddingStart="18sp"
        android:paddingEnd="18sp"
        android:layout_marginBottom="18sp"
        android:id="@+id/savings_account_list"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@drawable/savings_tot_btn_3"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginEnd="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginBottom="8sp"
        android:text="Add Savings Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>